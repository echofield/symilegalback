    {
      "id": "reception_clause",
      "question": "Inclure clause de réception des travaux ?",
      "type": "select",
      "options": ["Oui", "Non", "Réception tacite"],
      "validation": { "required": true }
    },
    {
      "id": "penalties_delay",
