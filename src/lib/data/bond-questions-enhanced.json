    {
      "id": "planning_phases",
      "question": "Nombre de phases de travaux",
      "type": "select",
      "options": ["1 phase", "2 phases", "3 phases", "4 phases", "5+ phases"],
      "validation": { "required": true }
    },
    {
      "id": "insurance_required",
      "question": "Assurance décennale requise ?",
      "type": "select",
      "options": [
        "Oui obligatoire",
        "Oui recommandée",
        "Non nécessaire",
        "À vérifier"
